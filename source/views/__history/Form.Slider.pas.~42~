unit Form.Slider;

interface

uses
  FMX.Forms, System.SysUtils;

type
  TFormSlider = class
  public
    class procedure ShowModal(const AParent, AForm: TForm);
  end;

implementation

{ TFormSlider }

class procedure TFormSlider.ShowModal(const AParent, AForm: TForm);
begin
  AForm.BorderIcons := [];
  AForm.SetBounds(0, AParent.Bounds.Top, 0, AParent.Bounds.Height);
  AForm.Show();
  var LSize := Trunc(AParent.Bounds.Width * 0.5);
  var LCurSize := 0;
  repeat
    AForm.SetBounds(AParent.Bounds.Right - LCurSize, AParent.Bounds.Top + 2, LCurSize, AParent.Bounds.Height - 2);
    Inc(LCurSize, Trunc(LSize * 0.03));
  until LCurSize >= LSize;
  AForm.SetBounds(AParent.Bounds.Right - LSize, AParent.Bounds.Top + 2, LSize, AParent.Bounds.Height - 2);
  AForm.ShowModal();
end;

end.
